
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <script src="~/layui/layui.js"></script>
    <title>IntentionShow</title>
    <script>
        layui.use('table', function () {
            var table = layui.table;
            var $ = layui.jquery;
            var form = layui.form;
            table.render({
                elem: '#test'
                , url: 'http://localhost:50111/api/StudentShow'
                , cols: [[
                    { field: 'StudentId', title: 'ID' }
                    , { field: 'StudentName', title: '学生姓名' }
                    , { field: 'StudentIphone', title: '学生手机号' }
                    , { field: 'StudyName', title: '年级' }
                    , { field: 'OrganName', title: '机构' }
                    , { field: 'Counselor', title: '咨询师' }
                    , { field: 'StudentQuality', title: '质量度' }
                    , { fixed: 'right', title: '操作', toolbar: '#barDemo', width: 500 }
                ]]
                , id: 'testReload'
                , page: false
            });


            //下拉框机构
            Jigou();
            //年级下拉
            Nian();
            //查询
            $("#Sel").on('click', function () {
                table.reload('testReload', {
                    page: {
                        curr: 1 //重新从第 1 页开始
                    }
                    , where: {
                        jigou: $("#Select1").val(),
                        zi: $("#zi").val(),
                        zhi: $("#Select3").val(),
                        nian: $("#Select4").val(),
                        name: $("#name").val(),
                        iphone: $("#iphone").val()
                    }
                });
                return false;
            })


            //监听行工具事件
            table.on('tool(test)', function (obj) {
                var data = obj.data;
                //console.log(obj)
                if (obj.event === 'del') {
                    layer.confirm('真的删除行么', function (index) {
                        obj.del();
                        layer.close(index);
                    });
                } else if (obj.event === 'edit') {
                    location.href = '/StudentM/Patriarch?id=' + data.StudentId;
                } else if (obj.event === 'trial') {
                    location.href = '/StudentM/AddTrial?id=' + data.StudentId;
                }
            });

        });

        //年级下拉
        function Nian() {
            var $ = layui.jquery;
            var form = layui.form;
            $.ajax({
                url: "http://localhost:50111/api/GetRoomStudys",
                type: "get",
                contentType: "application/json",
                success: function (data) {
                    var str = "";
                    $(data).each(function () {
                        str += "<option value='" + this.stID + "'>" + this.studyName + "</option>";
                    })
                    $("#Select4").append(str);
                    form.render("select");
                }
            })
        }

        //下拉框机构
        function Jigou() {
            var $ = layui.jquery;
            var form = layui.form;
            $.ajax({
                url: "http://localhost:50111/api/GetOrganMod",
                type: "get",
                contentType: "application/json",
                success: function (data) {
                    var str = "";
                    $(data).each(function () {
                        str += "<option value='" + this.organId + "'>" + this.organName + "</option>";
                    })
                    $("#Select1").append(str);
                    form.render("select");
                }
            })

        }
    </script>

    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-xs" lay-event="edit">添加家长信息</a>
        <a class="layui-btn layui-btn-xs" lay-event="trial">申请试听课</a>
    </script>

</head>
<body>
    <form class="layui-form" action="">
        <div class="layui-input-inline" style="margin-left:110px">
            <select id="Select1">
                <option value="0">机构</option>

            </select>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">咨询师：</label>
            <div class="layui-input-block">
                <input type="text" name="zi" id="zi" lay-verify="title" autocomplete="off" placeholder="请输入姓名" class="layui-input">
            </div>
        </div>
        <div class="layui-input-inline" style="margin-left:110px">
            <div class="layui-input-inline">
                <select id="Select3">
                    <option value="">质量度</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="E">E</option>
                    <option value="F">F</option>
                </select>
            </div>
        </div>
        <div class="layui-input-inline" style="margin-left:110px">
            <div class="layui-input-inline">
                <select id="Select4">
                    <option value="0">年级</option>

                </select>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">学员姓名：</label>
            <div class="layui-input-block">
                <input type="text" name="name" id="name" lay-verify="title" autocomplete="off" placeholder="请输入姓名" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">手机号：</label>
            <div class="layui-input-block">
                <input type="text" name="iphone" id="iphone" lay-verify="title" autocomplete="off" placeholder="请输入姓名" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" data-type="reload" id="Sel">搜索</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                <input id="Button1" class="layui-btn" type="button" value="添加" onclick="location.href='/StudentM/StudentAdd'" />
            </div>
        </div>
    </form>
    <table class="layui-hide" id="test" lay-filter="test"></table>

</body>
</html>
