
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <script src="~/layui/layui.js"></script>
    <title>机构管理显示</title>
</head>
<body>
    <div class="layui-form-item">
        <div>
            <button type="button" class="layui-btn layui-btn-radius" onclick="location.href='/InstitutionM/AddOrganes'" id="Button1">添加机构</button>
        </div>
    </div>
    <div>
        <div style="float:left">
            <div class="layui-m-anim-left">
                <div id="test9" class="demo-tree-more"></div>
            </div>
        </div>
        <div style="float:left">
            <div class="layui-m-anim-right">
                <table class="layui-hide" id="demo" lay-filter="demo"></table>
            </div>
        </div>
    </div>
    <script type="text/html" id="lineBtns">
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="upt">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="glsq">管理授权</a>
    </script>
    <script type="text/html" id="switchTpl">
        <!-- 这里的 checked 的状态只是演示 -->
        <input type="checkbox" name="OrganStatus" value="{{d.OrganStatus}}" lay-skin="switch" lay-text="已启用|已禁用" lay-filter="sexDemo" {{ d.OrganStatus == 0 ? 'checked' : '' }}>
    </script>
</body>
</html>
<script>
    layui.use(['tree', 'util'], function () {
        var tree = layui.tree
            , layer = layui.layer
            , util = layui.util;
        var $ = layui.$;
        var trees;
        $.ajax({
            url: "http://localhost:50111/api/GetLists",
            type: "get",
            async: false,
            success:
                function (d) {
                    trees = d;
                }
        })
        //开启节点操作图标
        tree.render({
            elem: '#test9'
            , data: trees
            , click: function (obj) {
                layer.msg(JSON.stringify(obj.data));
            }
        });
    });
</script>
<script>
    layui.use(['form', 'util', 'upload', 'layer', 'table'], function () {
        var table = layui.table,
            upload = layui.upload,//使用LayUI上传组件
            excel = layui.excel,
            form = layui.form,
            util = layui.util;
        //layui.util.toDateString(new Date(json.time).getTime(), "yyyy-MM-dd HH:mm:ss");
        //第一个实例
        table.render({
            elem: '#demo'
            , height: 312
            , url: 'http://localhost:50111/api/GetOrganMods' //数据接口
            , contentType: "application/json" //跨域
            , method: 'get'
            , cols: [[ //表头
                { field: 'OrganEncod', title: '机构编码', width: 150 }
                , { field: 'OrganName', title: '机构名称', width: 150}
                , { field: 'aa', title: '上级机构', width: 150 }
                , { field: 'PriceRankName', title: '价格级别', width: 150}
                , { field: 'OrganStatus', title: '用户状态', width:150, templet: '#switchTpl' }     
                , { field: 'OrganBeginTime', title: '创建时间', width:150, templet: "<div>{{layui.util.toDateString(d.OrganBeginTime, 'yyyy-MM-dd')}}</div>" }
                , { fixed: 'right', title: '操作', toolbar: '#lineBtns', width: 150 }                
            ]]
            , page: true
            , id: 'testReload'
        });
        //监听状态操作
        form.on('switch(sexDemo)', function (obj) {
            layer.tips(this.value + ' ' + this.name + ':' + obj.elem.checked, obj.othis);
            var val;
            if (obj.elem.checked) {
                val = 0;
            }
            else {
                val = 1;
            }
            $.ajax({
                url: "http://localhost:50111/api/ModiyStates?status=" + val + "&orgid=" + this.value,
                type: "post",
                contentType: "application/json",
            })
        });
        var $ = layui.$;
        table.on('tool(demo)', function (obj) {
            var data = obj.data; //获得当前行数据
            var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
            if (layEvent == 'upt') {
                location.href = "/InstitutionM/UpdateOrganes?orgid=" + data.OrganId;
            }
        });
    });
</script>