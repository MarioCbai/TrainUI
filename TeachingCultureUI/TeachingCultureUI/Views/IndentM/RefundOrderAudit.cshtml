
@{
    Layout = null;
}

<!DOCTYPE html>
<link href="~/layui/css/layui.css" rel="stylesheet" />
<script src="~/layui/layui.js"></script>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RefundOrderAudit</title>
</head>
<body>
    <table class="layui-hide" id="test" lay-filter="test"></table>
    <table class="layui-hide" id="test1" lay-filter="test"></table>

    <form class="layui-form" action="" lay-filter="example">
        <div class="layui-form-item" style="float:left">
            <label class="layui-form-label">申请退款金额:</label>
            <div class="layui-input-block">
                <input type="text" name="RefundAmount" lay-verify="title" autocomplete="off" class="layui-input">
            </div>
        </div>
        
        <div class="layui-form-item layui-form-text">
            <label class="layui-form-label">审核意见</label>
            <div class="layui-input-block" style="width:500px">
                <textarea class="layui-textarea" name="RefundRemark"></textarea>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button type="button" class="layui-btn" id="cancel" lay-filter="demo1">取消</button>
                <button type="button" class="layui-btn" id="refuse" value="1" lay-filter="demo2">审核拒绝</button>
                <button type="button" class="layui-btn" id="pass" value="2" lay-filter="demo3">审核通过</button>
        </div>
    </form>

    <script>
        layui.use(['form', 'layer', 'table'], function () {
            var form = layui.form
                , layer = layui.layer
                , table = layui.table;

            var arr = location.href.split("/");
            var id = arr[arr.length - 1];


            //方法级渲染/学员信息
            table.render({
                elem: '#test'
                , url: 'http://localhost:50111/api/GetRefundById?id=' + id
                , contentType: "application/json"
                , method: 'get'
                , cols: [[
                    { checkbox: true, fixed: true }
                    , { field: 'StudentIphone', title: '学生账号', width: 150 }
                    , { field: 'StudentName', title: '学生姓名', width: 150 }
                    , { field: 'OrganName', title: '所属机构', width: 150 }
                    , { field: 'StudyName', title: '年级 ', width: 150 }
                    , { field: 'OrderNO', title: '订单编号', width: 100 }
                    , { field: 'OrderAmount', title: '订单金额', width: 100 }
                    , { field: 'AmountPayable', title: '应付金额', width: 100 }
                    , { field: 'AmountActually', title: '实付金额', width: 100 }
                    , {
                        field: 'StateOfPayment', title: '支付状态', width: 100,
                        templet: function (data) {
                            if (data.StateOfPayment == 1) {
                                return "已支付";
                            } else if (data.StateOfPayment == 2) {
                                return "已返还";
                            } else {
                                return "未支付";
                            }
                        }
                    }
                    , { field: 'PatternOfPayment', title: '付款方式', width: 100 }
                    , {
                        field: 'OrderStatus', title: '订单状态', width: 100,
                        templet: function (data) {
                            if (data.OrderStatus == 0) {
                                return "待审核";
                            } else if (data.OrderStatus == 1) {
                                return "审核拒绝";
                            } else if (data.OrderStatus == 2) {
                                return "审核通过";
                            } else {
                                return "已取消";
                            }
                        }
                    }
                    , { field: 'OrderTime', title: '下单时间', width: 100 }
                    , { field: 'ConsumerName', title: '下单人', width: 80 }
                    , { field: 'OrganName', title: '下单机构', width: 100 }
                ]]
            });
            //方法级渲染/商品信息
            table.render({
                elem: '#test1'
                , url: 'http://localhost:50111/api/GetRefundById?id=' + id
                , contentType: "application/json"
                , method: 'get'
                , cols: [[
                    { checkbox: true, fixed: true }
                    , { field: 'BusinessTypeName', title: '业务名称', width: 100 }
                    , { field: 'ClassModelName', title: '班型 ', width: 100 }
                    , { field: 'StudyName', title: '学段', width: 100 }
                    , { field: 'HourTypeName', title: '课时类型', width: 100 }
                    , { field: 'PricingPrice', title: '课时单价', width: 100 }
                    , { field: 'PeriodNum', title: '课时数', width: 100 }
                    , { field: 'ComplimentaryPeriod', title: '赠送课时数', width: 100 }
                    , { field: 'CommodityPrice', title: '商品总价', width: 100 }
                    , { field: 'RefundAmount', title: '建议退款金额', width: 100 }
                    , { field: 'RefundAmount', title: '申请退款金额', width: 100 }
                    , { field: 'RefundRemark', title: '备注', width: 100 }
                ]]
            });
            //方法级渲染/退款信息
            table.render({
                elem: '#test2'
                , url: 'http://localhost:50111/api/GetOrderaViews?id=' + id
                , contentType: "application/json"
                , method: 'get'
                , cols: [[
                    { checkbox: true, fixed: true }
                    , { field: 'RefundTime', title: '退款时间', width: 100 }
                    , { field: 'RefundAmount', title: '退款金额', width: 100 }
                    , { field: 'Refundperson', title: '申请人', width: 100 }
                    , {
                        field: 'RefundState', title: '审核状态', width: 100,
                        templet: function (data) {
                            if (data.RefundState == 0) {
                                return "待审核";
                            } else if (data.RefundState == 1) {
                                return "审核拒绝";
                            } else if (data.RefundState == 2) {
                                return "审核通过";
                            }
                        }
                    }
                    , { field: 'AuditDateTime', title: '审核时间', width: 100 }
                    , { field: 'RefundAmount', title: '审核退款金额', width: 80 }
                    , { field: 'ConsumerName', title: '审核人', width: 80 }
                ]]
            });

            var $ = layui.$;
            //返回审核页面
            $("#cancel").on('click', function () {
                location.href = "/IndentM/OrderAudit";
                return false;
            });
            //审核拒绝
            $("#refuse").on('click', function () {
                var refuse = $("#refuse").val();  //获取按钮的value值
                //ajax修改审核状态
                $.ajax({
                    url: 'http://localhost:50111/api/UpdateOrderStatus?id=' + id + "&orderStatus=" + refuse,
                    contentType: "application/json",
                    type: 'post',
                    success: function (d) {
                        if (d > 0) {
                            alert('执行成功');
                            location.href = "/IndentM/OrderAudit";
                        }
                        else {
                            alert('执行失败');
                        }
                    }
                });
                return false;
            });
            //审核通过
            $("#pass").on('click', function () {
                var pass = $("#pass").val();  //获取按钮的value值
                //ajax修改审核状态
                $.ajax({
                    url: 'http://localhost:50111/api/UpdateOrderStatus?id=' + id + "&orderStatus=" + pass,
                    contentType: "application/json",
                    type: 'post',
                    success: function (d) {
                        if (d > 0) {
                            alert('执行成功');
                            location.href = "/IndentM/OrderAudit";
                        }
                        else {
                            alert('执行失败');
                        }
                    }
                });
                return false;
            });


            $('.demoTable .layui-btn').on('click', function () {
                var type = $(this).data('type');
                active[type] ? active[type].call(this) : '';
            });

        });
    </script>



</body>
</html>
