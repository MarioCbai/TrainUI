

@{
    Layout = null;
}

<!DOCTYPE html>
<script src="~/layui/layui.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script type="text/html" id="switchTpl">
    <!-- 这里的 checked 的状态只是演示 -->
    <input type="checkbox" name="Zhuang" value="{{d.CPId}}" lay-skin="switch" lay-text="启用|禁用" lay-filter="sexDemo" {{ d.CPState == 1 ? 'checked' : '' }}>
</script>
<script>
    var PageIndex = 1;
    var PageSize = 2;
    layui.use('table', function () {
        var table = layui.table
            , form = layui.form
            , layer = layui.layer;
        table.render({
            elem: '#test'
            , url: 'http://localhost:50111/api/UserPartShow'
            , cols: [[
                { field: 'CPId', width: 100, title: '序号' }
                , { field: 'ConsumerName', width: 100, title: '用户名' }
                , { field: 'ConsumerIPhone', width: 100, title: '手机号' }
                , { field: 'PartName', width: 100, title: '所属角色' }
                , { field: 'Zhuang', title: '状态', minWidth: 150, templet: '#switchTpl', unresize: true }
                , { field: 'Createtime', width: 100, title: '创建时间' }
                , { field: 'Handlers', width: 100, title: '操作者' }
            ]]
            , page: true
            , limit: 2
            , limits: [2, 4, 6]
            , id: 'testReload'
            , request: {
                pageName: 'PageIndex' //页码的参数名称，默认：page
                , limitName: 'PageSize' //每页数据量的参数名，默认：limit
            }
        });
        var $ = layui.jquery;
        var active = {
            reload: function () {
                var demoReload = $('#demoReload');

                //执行重载
                table.reload('testReload', {
                    page: {
                        curr: 1 //重新从第 1 页开始
                    }
                    , where: {
                        key: {
                            name: $("#name").val(),
                            Iphone: $("#Iphone").val(),
                            PartName: $("#PartName$").val(),
                            State: $("#State").val(),
                            StartTime: $("#StartTime").val(),
                            EndTime: $("#EndTime").val()
                        }
                    }
                }, 'data');
            }
        };
        //监听提交查询
        $('.demoTable .layui-btn').on('click', function () {
            var type = $(this).data('type');
            active[type] ? active[type].call(this) : '';
        });
        //下拉框
        DropDown();
        //监听状态操作
        form.on('switch(sexDemo)', function (obj) {
            layer.tips(this.value + ' ' + this.name + '：' + obj.elem.checked, obj.othis);
            var val;
            if (obj.elem.checked) {
                val = 1;
            } else {
                val = 0;
            }
            $.ajax({
                url: "http://localhost:50111/api/State?id=" + this.value + "&val=" + val,
                type: "post",
                contentType: "application/json"
            })
        });
    });

    //下拉框
    function DropDown() {
        var $ = layui.jquery;
        var form = layui.form
        $.ajax({
            url: "http://localhost:50111/api/PartShow",
            type: "get",
            contentType: "application/json",
            success: function (data) {
                var str = "";
                $("#part").empty();
                str += "<option value='0'>全部</option>";
                $(data).each(function () {
                    str += "<option value='" + this.partId + "'>" + this.partName + "</option>"
                })
                $("#part").append(str);
                form.render("select");
            }
        })

    }
</script>
<div>
    <form class="layui-form" action="">
        <div class="layui-form-item">
            <label class="layui-form-label">姓名：</label>
            <div class="layui-input-block">
                <input type="text" name="name" id="name" lay-verify="title" autocomplete="off" placeholder="请输入姓名" class="layui-input">
            </div>
            <label class="layui-form-label">手机号 ：</label>
            <div class="layui-input-block">
                <input type="text" name="Iphone" id="Iphone" lay-verify="title" autocomplete="off" placeholder="请输入手机号" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">所属角色</label>
            <div class="layui-input-inline">
                <select name="PartName" id="PartName">
                    <option value="0">全部</option>
                </select>
            </div>
            <label class="layui-form-label">状态</label>
            <div class="layui-input-inline">
                <select name="State" id="State">
                    <option value="全部">全部</option>
                    <option value="1">启用</option>
                    <option value="0">禁用</option>
                </select>
            </div>
        </div>

        <div class="layui-inline">
            <label class="layui-form-label">创建日期</label>
            <div class="layui-input-inline">
                <input type="date" name="StartTime" id="StartTime" lay-verify="date" placeholder="yyyy-MM-dd" autocomplete="off" class="layui-input">
            </div>
        </div><label>到</label>
        <div class="layui-inline">
            <div class="layui-input-inline">
                <input type="date" name="EndTime" id="EndTime" lay-verify="date" placeholder="yyyy-MM-dd" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" data-type="reload">搜索</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    </form>
</div>
<div>
    <table class="layui-hide" id="test"></table>
</div>

