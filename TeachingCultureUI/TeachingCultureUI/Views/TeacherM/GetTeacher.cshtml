
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <script src="~/layui/layui.js"></script>
    <title>教师管理显示</title>
</head>
<body>
    <div class="layui-form-item">
        <div>
            <button type="button" class="layui-btn layui-btn-radius" onclick="location.href='/TeacherM/TeacherAdd'" id="Button1">添加教师</button>
            <button type="button" class="layui-btn layui-btn-radius" onclick="location.href='/Teacher/TeacherShow'" id="Button1">教学信息</button>
        </div>
    </div>
    <div class="layui-m-anim-right">
        <table class="layui-hide" id="demo" lay-filter="demo"></table>
    </div>
    <script type="text/html" id="lineBtns">
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="upt">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
    </script>
</body>
</html>
<script>
    layui.use(['form', 'util', 'upload', 'layer', 'table'], function () {
        var table = layui.table,
            upload = layui.upload,//使用LayUI上传组件
            excel = layui.excel,
            form = layui.form,
            util = layui.util;
        //layui.util.toDateString(new Date(json.time).getTime(), "yyyy-MM-dd HH:mm:ss");
        //第一个实例
        table.render({
            elem: '#demo'
            , height: 312
            , url: 'http://localhost:50111/api/GetTeacherMod' //数据接口
            , contentType: "application/json" //跨域
            , method: 'get'
            , cols: [[ //表头
                { field: 'TeacherId', title: '编号',  sort: true, fixed: 'left' }
                , { field: 'OrganName', title: '所属机构'}
                , { field: 'TeacherName', title: '姓名' }
                , { field: 'TeacherOuter', title: '对外姓名' }
                , {
                    field: 'TeacherSex', title: '性别', templet: function (d) {
                        if (d.OrganStatus == 1) {
                            return "男"
                        }
                        else {
                            return "女"
                        }
                    }
                }
                , { field: 'TeachereducationName', title: '学历' }
                , { field: 'TeacherQQ', title: 'QQ' }
                , { field: 'TeacherWeChat', title: '微信' }
                , { field: 'TeacherPhone', title: '手机号' }
                , { field: 'TeacherCom', title: '邮箱' }
                , { fixed: 'right', title: '操作', toolbar: '#lineBtns' }
            ]]
            , page: true
            , id: 'testReload'
        });
        var $ = layui.jquery;
        table.on('tool(demo)', function (obj) {
            var data = obj.data; //获得当前行数据
            var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
            if (layEvent == 'del') { //删除
                layer.confirm('确定删除吗？', { title: '删除' }, function (index) {
                    //向服务端发送删除指令og
                    $.ajax({
                        url: "http://localhost:50111/api/DeleteTeacherMod?ids=" + data.TeacherId,
                        type: "get",
                        success: function (d) {
                            if (d > 0) {
                                layer.msg('删除成功', { icon: 1, time: 1500 }, function () {
                                    layer.close(index);//关闭弹窗
                                    table.reload('testReload', {//重载表格
                                    });

                                });
                            }
                            else {
                                layer.msg('删除失败', { icon: 1, time: 1500 }, function () {
                                    layer.close(index);//关闭弹窗
                                });
                            }
                        }
                    });
                    layer.close(index);//关闭弹窗
                });
            }
            else if (layEvent == 'upt') {

                location.href = "/TeacherM/ModifyTeacher?teacherid=" + data.TeacherId;
            }
        });
    });
</script>