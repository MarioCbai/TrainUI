
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>家长</title>
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <script src="~/layui/layui.js"></script>
    <script>
        layui.use('table', function () {
            var table = layui.table;

            table.render({
                elem: '#test'
                , url: 'http://localhost:50111/api/ParntShow?id='+@ViewBag.id
                , cols: [[
                    { field: 'PSID', title: 'ID' }
                    , { field: 'PatriarchName', title: '家长姓名' }
                    , { field: 'PatriarchIphone',title: '家长手机'}
                    , { field: 'PatriarchRelation', title: '与孩子关系' }
                    , { field: 'PatriarchOccupation', title: '职业'} //minWidth：局部定义当前单元格的最小宽度，layui 2.2.1 新增
                    , { field: 'PatriarchAge', title: '年龄'}
                    , { field: 'PatriarchWeChat', title: '微信'}
                    , { field: 'PatriarchRemark', title: '备注' }
                    , { fixed: 'right', title: '操作', toolbar: '#barDemo', width: 150 }
                ]]
            });

            //监听行工具事件
            table.on('tool(test)', function (obj) {
                var data = obj.data;
                var layer = layui.layer;

                //console.log(obj)
                if (obj.event === 'del') {
                    layer.confirm('真的删除行么', function (index) {
                        $.ajax({
                            url: "http://localhost:50111/api/DelParent?id=" + data.PSID,
                            type: "get",
                            contentType: "application/json",
                            success: function (data) {
                                if (data > 0) {
                                    alert('删除成功');
                                }
                            }
                        })
                    });
                } else if (obj.event === 'edit') {
                    
                    layer.open({
                        type: 2,
                        Boolean: true,
                        area: ['720px', '520px'],
                        content: ["/StudentM/UptParent?id=" + data.PatriarchId],
                    })
                }
            });
        });


        function addparent() {
            var layer = layui.layer;
            layer.open({
                type: 2,
                Boolean: true,
                area: ['720px', '520px'],
                content: ["/StudentM/PatriarchAdd?id="+@ViewBag.id],
            })
        }
    </script>
    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
    </script>
</head>
<body>
    <button type="button" class="layui-btn" onclick="addparent()">添加家长信息</button>
    <table class="layui-hide" id="test" lay-filter="test"></table>
</body>
</html>
